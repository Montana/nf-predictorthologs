/*
 * -------------------------------------------------
 *  Nextflow config file for running tests
 * -------------------------------------------------
 * Defines bundled input files and everything required
 * to run a fast and simple test. Use as follows:
 *   nextflow run czbiohub/predictorthologs -profile test_sourmash_search.config
 */

params {
  config_profile_name = 'Test profile'
  config_profile_description = 'Minimal test dataset to check pipeline function'
  // Limit resources so that this can run on Travis
  max_cpus = 2
  max_memory = 6.GB
  max_time = 48.h
  // Input data
  hashes = 'https://github.com/czbiohub/test-datasets/raw/predictorthologs/testdata/liver_unaligned__hashes.txt'
  csv = 'https://raw.githubusercontent.com/czbiohub/test-datasets/predictorthologs/testdata/liver_unaligned__samples.csv'
  sourmash_molecule = 'dayhoff'
  sourmash_ksize = 45
  sourmash_scaled = 1

  input_is_protein = true
  protein_searcher = 'sourmash'

  proteome_search_fasta = 'https://github.com/czbiohub/test-datasets/raw/predictorthologs/reference/ncbi_refseq_vertebrate_mammalian_ptprc_plus__np_only.fasta'
}
