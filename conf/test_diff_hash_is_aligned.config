/*
 * -------------------------------------------------
 *  Nextflow config file for running tests
 * -------------------------------------------------
 * Defines bundled input files and everything required
 * to run a fast and simple test. Use as follows:
 *   nextflow run nf-core/predictorthologs -profile test,<docker/singularity>
 */

params {
  config_profile_name = 'Test profile'
  config_profile_description = 'Minimal test dataset to check pipeline function'
  // Limit resources so that this can run on Travis
  max_cpus = 2
  max_memory = 6.GB
  max_time = 48.h
  // Input data
  csv = 'https://github.com/czbiohub/test-datasets/raw/olgabot/predictorthologs--orthology-featurecounts/testdata/samples__hashes_in_bams_featurecounts_orthology__github_paths.csv'
  input_is_protein = true

  // Differential hash expression options
  diff_hash_expression = true
  diff_hash_inverse_regularization_strength = 1  // Use larger number for testing, for less regularization on this small dataset
  diff_hash_solver = 'liblinear'  // Use simpler model for testing
  diff_hash_penalty = 'l2'
  diff_hash_with_abundance = true

  // sourmash parameters
  protein_searcher = 'sourmash'
  sourmash_molecule = 'dayhoff'
  sourmash_ksize = 45
  sourmash_log2_sketch_size = 14
  sourmash_scaled = 2

  // CSV has aligned/unaligned signatures
  csv_has_is_aligned = true

  sourmash_index = 'https://github.com/czbiohub/test-datasets/raw/e19aec5adf22a015189cb52a064bb358e3ae5515/reference/ncbi_refseq_vertebrate_mammalian_ptprc_plus__np_only__molecule-dayhoff__ksize-45__scaled-1__track_abundance-true.sbt.zip'
  diamond_database = 'https://github.com/czbiohub/test-datasets/raw/predictorthologs/reference/ncbi_refseq_vertebrate_mammalian_ptprc_plus__np_only_db.dmnd'
}
