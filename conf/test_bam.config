/*
 * -------------------------------------------------------------------
 *  Nextflow config file for running tests with bam, translate
 * -----------------------------------------------------------------------
 * Defines bundled input files and everything required
 * to run a fast and simple test. Use as follows:
 *   nextflow run czbiohub/nf-predictorthologs -profile test_bam.config
 */

params {
  config_profile_name = 'Test profile'
  config_profile_description = 'Minimal test dataset to check pipeline function'
  // Limit resources so that this can run on Travis
  max_cpus = 2
  max_memory = 6.GB
  max_time = 48.h
  // Input data
  bed = "https://github.com/czbiohub/test-datasets/raw/pranathi-predictorthologs-csv-correction/reference/Pongo_abelii.PPYG2.ptprc_locus.bed"
  bam = "https://github.com/czbiohub/test-datasets/raw/pranathi-predictorthologs-csv-correction/testdata/SRR306792_GSM752645_ppy_br_M_1_1Aligned.sortedByCoord.out.ptprc_subset.bam"
  bai = "https://github.com/czbiohub/test-datasets/raw/pranathi-predictorthologs-csv-correction/testdata/SRR306792_GSM752645_ppy_br_M_1_1Aligned.sortedByCoord.out.ptprc_subset.bam.bai"
  single_end = true
  proteome_translate_fasta = 'https://raw.githubusercontent.com/czbiohub/test-datasets/pranathi-predictorthologs-csv-correction/reference/ncbi_refseq_vertebrate_mammalian_ptprc_plus__np_only.fasta'
  translate_peptide_molecule = 'dayhoff'

  proteome_search_fasta = 'https://github.com/czbiohub/test-datasets/raw/pranathi-predictorthologs-csv-correction/reference/ncbi_refseq_vertebrate_mammalian_ptprc_plus__np_only.fasta'
  diamond_refseq_release = false
  diamond_taxonmap_gz = "https://github.com/czbiohub/test-datasets/raw/pranathi-predictorthologs-csv-correction/reference/prot.accession2taxid.vertebrate_mammalian_ptprc.with_header.txt.gz"

}
