/*
 * -------------------------------------------------------------------
 *  Nextflow config file for running tests with bam, extract_coding
 * -----------------------------------------------------------------------
 * Defines bundled input files and everything required
 * to run a fast and simple test. Use as follows:
 *   nextflow run nf-core/kmermaid -profile test_extract_coding_bam.config
 */

params {
  config_profile_name = 'Test profile'
  config_profile_description = 'Minimal test dataset to check pipeline function'
  // Limit resources so that this can run on Travis
  max_cpus = 2
  max_memory = 6.GB
  max_time = 48.h
  // Input data
  reads = [["10x_mouse_lung_ptprc", 'https://github.com/czbiohub/test-datasets/raw/predictorthologs/testdata/testdata/10x_mouse_lung_ptprc_locus.fasta']]
  singleEnd = true

  peptide_fasta = 'https://github.com/czbiohub/test-datasets/raw/kmermaid/reference/ptprc_bam_translations.fa'
  bloomfilter_tablesize = '1e8'
  extract_coding_peptide_ksize = '11'
  extract_coding_peptide_molecule = 'dayhoff'
}
