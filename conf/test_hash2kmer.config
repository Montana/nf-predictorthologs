/*
 * -------------------------------------------------
 *  Nextflow config file for running tests
 * -------------------------------------------------
 * Defines bundled input files and everything required
 * to run a fast and simple test. Use as follows:
 *   nextflow run nf-core/predictorthologs -profile test,<docker/singularity>
 */

params {
  config_profile_name = 'Test profile'
  config_profile_description = 'Minimal test dataset to check pipeline function'
  // Limit resources so that this can run on Travis
  max_cpus = 2
  max_memory = 6.GB
  max_time = 48.h
  // Input data
  hashes = 'https://github.com/czbiohub/test-datasets/raw/pranathi-predictorthologs-csv-correction/testdata/liver_unaligned__hashes.txt'
  csv = 'https://github.com/czbiohub/test-datasets/raw/pranathi-predictorthologs-csv-correction/testdata/liver_unaligned__samples.csv'
  input_is_protein = true

  proteome_search_fasta = 'https://github.com/czbiohub/test-datasets/raw/pranathi-predictorthologs-csv-correction/reference/ncbi_refseq_vertebrate_mammalian_ptprc_plus__np_only.fasta'
  diamond_refseq_release = false
  diamond_taxonmap_gz = "https://github.com/czbiohub/test-datasets/raw/pranathi-predictorthologs-csv-correction/reference/prot.accession2taxid.vertebrate_mammalian_ptprc.with_header.txt.gz"

}
